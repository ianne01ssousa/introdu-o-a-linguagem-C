#include <stdio.h>
int main() {
    //Declaração de variaveis
int num1, num2, soma, sub, multi, divi, resto;

    // Entrada de dados
    printf("Digite o primeiro número: ");
    scanf("%d", &num1);

    printf("Digite o segundo número: ");
    scanf("%d", &num2);

    // Processamento
    soma = num1 + num2;
    sub = num1 - num2;
    multi = num1 * num2;
    divi = num1 / num2;
    resto = num1 % num2;

    // Saída de dados
    printf("A soma é: %d\n", soma);
    printf("A subtração é: %d\n", sub);
    printf("A multiplicação é: %d\n", multi);
    printf("A divisão inteira é: %d\n", divi);
    printf("O resto da divisão é: %d\n", resto);

    return 0;
}
